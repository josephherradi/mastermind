<?xml version="1.0" encoding="UTF-8"?>
<Configuration status= "info">
    <Appenders>
        <File name="MyFile" fileName="test.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="MyFile"/>
        </Root>
    </Loggers>
</Configuration>